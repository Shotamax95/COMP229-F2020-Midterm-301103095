<% include ../partials/header.ejs %>

<!-- Content Add page -->
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
        <h1 class="text-center">- <%= title %> -</h1>

        <form class="form" method="POST">
            <div class="form-group">
                <label for="titleTextField">Book Title</label>
                <input type="text" class="form-control" 
                id="titleTextField"
                placeholder="Enter the book title"
                name="title" 
                value = "<%= books.title %>"
                required>
            </div>

            <div class="form-group">
                <label for="descriptionTextArea">Description</label>
                <textarea type="text" class="form-control" 
                id="descriptionTextArea"
                placeholder="Enter the brief description of the book"
                name="description" required>
                <%= books.description %>      
                </textarea>
            </div>  

            <div class="form-group">
                <label for="priceTextField">Price</label>
                <input type="text" class="form-control" 
                id="priceTextField"
                placeholder="Enter the book's price"
                name="price" 
                value = "<%= books.price %>"
                required>
            </div>


            <div class="form-group">
                <label for="authorTextField">Author</label>
                <input type="text" class="form-control" 
                id="authorTextField"
                placeholder="Enter the book's author title"
                name="author"
                value = "<%= books.author %>"
                required>
            </div>      

            <div class="form-group">
                <label for="genreTextField">Genre</label>
                <input type="text" class="form-control" 
                id="genreTextField"
                placeholder="Enter the genre"
                name="genre"
                value = "<%= books.genre %>"
                required>
            </div>  

            
            <button class="btn btn-primary text-center" type="submit"> Submit</button>

                <a href="/books" class="btn btn-warning text-center"> Cancel</a>
        </form>
        </div>
    </div>
</div>


<% include ../partials/footer.ejs %>
